{
  "framework": "vite",
  "buildCommand": "npm run build:vite-only",
  "outputDirectory": "dist",
  "installCommand": "npm install --include=dev",
  "devCommand": "npm run dev:frontend",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}